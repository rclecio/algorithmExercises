algoritmo "lendoNomeSalario"
// Crie um programa que leia o nome e o salário de um funcionário, mostrando no final uma mensagem
var
    nome: caractere
    salario: real
inicio
    escreva ("Qual é o seu nome? ")
    leia (nome)
    escreva ("Informe o seu salário: ")
    leia (salario)
    escreva ("O funcionário(a) ", nome, " tem um salário de R$", salario:1:2, " em Junho")
fimalgoritmo